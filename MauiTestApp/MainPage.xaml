<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTestApp.MainPage"
             BackgroundColor="Black">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20" Padding="30">
        <!-- Logo (logo.jpg) -->
        <Image x:Name="LogoImage" Source="logo.jpg" WidthRequest="200" HeightRequest="200" />

        <!-- Tapable Test button -->
        <Button Text="Test" Clicked="OnTestClicked" WidthRequest="140" />
    </VerticalStackLayout>
</ContentPage>
